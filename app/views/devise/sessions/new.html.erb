<div class="session-main">

<%= form_with model: @user, url: user_session_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
    <div class="main-text">
     <h1 class='session-header-text'>サインイン</h1>
    </div>

   <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>


  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="session-form-text">メールアドレス</label>
      <span class="indispens">必須</span>
    </div>
    <%= f.email_field :email, class:"input-session-default", id:"email", placeholder:"@をつけたPC・携帯どちらかのアドレス", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="session-form-text">パスワード</label>
      <span class="indispens">必須</span>
    </div>
    <%= f.password_field :password, class:"input-session-default", id:"password", placeholder:"設定した半角英数字６文字以上のPASSWORD" %>
  </div>

  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
  <%= link_to "topへ", root_path, class:"tophe" %>
   <%= link_to image_tag("/images/02463_icon_024631_128.png", class:"wa-pro"), root_path %>
  </div>
<% end %>

</div>



